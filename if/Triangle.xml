<!-- 
=======================================================================
    						Service - Triangle		
=======================================================================
RTI Connext DDS XML App Creation

Define a service as a set of data-oriented interfaces.

The 'Triangle' service has two interfaces:
	- a publication (output) of Triangles
	- a subscription (input) of Triangles 

These interfaces can be composed with other service interfaces 
(if desired) to define component interfaces.

Author: Rajive Joshi, Real-Time Innovations Inc. Copyright (C) 2017.
-->
<dds
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/5.3.1/rti_dds_profiles.xsd"
	version="5.3.1">

	<!-- Data Types -->
	<types>
		<include file="$(TYPES_DIR)/ShapeType.xml" />
	</types>

	<!-- Participants : each participant defines a data-oriented interface -->
	<domain_participant_library name="Triangle_Library">

		<!-- Define a data-oriented interface -->
		<domain_participant
			name="Triangle_Root"
			base_name="$(BASE_NAME_Triangle_Root)">

			<register_type
				name="ShapeType"
				type_ref="rti::example::ShapeType" />

			<topic
				name="Triangle"
				register_type_ref="ShapeType" />

		</domain_participant>

		<!-- Define a data-oriented interface -->
		<domain_participant
			name="Triangle_Pub"
			base_name="$(BASE_NAME_Triangle_Pub)">

			<publisher name="Triangle_Pub_publisher">
				<publisher_qos base_name="ServiceQosLib::User.Service.Triangle" />
				<data_writer
					name="Triangle_writer"
					topic_ref="Triangle">
					<datawriter_qos base_name="ServiceQosLib::User.Service.Triangle" />
				</data_writer>
			</publisher>

		</domain_participant>

		<!-- Define a data-oriented interface -->
		<domain_participant
			name="Triangle_Sub"
			base_name="$(BASE_NAME_Triangle_Sub)">

			<subscriber name="Triangle_Sub_subscriber">
				<subscriber_qos base_name="ServiceQosLib::User.Service.Triangle" />
				<data_reader
					name="Triangle_reader"
					topic_ref="Triangle">
					<datareader_qos base_name="ServiceQosLib::User.Service.Triangle" />
					<filter
						name="TriangleTopic_ContentFiltered"
						kind="builtin.sql">
						<expression> x > %0 AND x &lt; %1 AND 
									 y > %2 AND y &lt; %3 
						</expression>
						<parameter_list>
							<param>100</param>
							<param>200</param>
							<param>100</param>
							<param>200</param>
						</parameter_list>
					</filter>
				</data_reader>
			</subscriber>

		</domain_participant>

	</domain_participant_library>

</dds>
