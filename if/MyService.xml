<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="/opt/rti/NDDSHOME/resource/schema/rti_dds_profiles.xsd">

    <!-- types -->
    <types>
        <include file="res/types/MyService.xml" />
    </types>

    <!-- Databus Library -->
    <domain_library name="MyServiceBusLib">
        <domain name="Domain">

            <register_type name="My::Type::Chat::Obj" type_ref="My::Type::Chat::Obj" />
            <topic name="Chat" register_type_ref="My::Type::Chat::Obj" />

        </domain>    
    </domain_library>

    <!-- Databus Interface library -->
    <domain_participant_library name="MyServiceIfLib">

        <!-- Interface: Pub -->
        <domain_participant name="Pub" domain_ref="MyServiceBusLib::Domain">
            <!-- Outputs -->
            <publisher name="_pub">
                <data_writer name="Chat_writer" topic_ref="Chat">
                    <datawriter_qos base_name="MyServiceQosLib::MyService_Pub" />
                </data_writer>
                <publisher_qos base_name="MyServiceQosLib::MyService_Pub" />
            </publisher>
            <participant_qos base_name="MyServiceQosLib::MyService_Pub" />
        </domain_participant>

        <!-- Interface: Sub -->
        <domain_participant name="Sub" domain_ref="MyServiceBusLib::Domain">
            <!-- Inputs -->
            <subscriber name="_sub">
                <data_reader name="Chat_reader" topic_ref="Chat">
                    <datareader_qos base_name="MyServiceQosLib::MyService_Sub" />
                </data_reader>
                <subscriber_qos base_name="MyServiceQosLib::MyService_Sub"/>
            </subscriber>
            <participant_qos base_name="MyServiceQosLib::MyService_Sub"/>
        </domain_participant>

        <!-- Interface: PubSub -->
        <domain_participant name="PubSub" domain_ref="MyServiceBusLib::Domain">

            <!-- Inputs -->
            <subscriber name="_sub">
                <data_reader name="Chat_reader" topic_ref="Chat">
                    <datareader_qos base_name="MyServiceQosLib::MyService_PubSub" />
                </data_reader>
                <subscriber_qos base_name="MyServiceQosLib::MyService_PubSub"/>
            </subscriber>

            <!-- Outputs -->
            <publisher name="_pub">
                <data_writer name="Chat_writer" topic_ref="Chat">
                    <datawriter_qos base_name="MyServiceQosLib::MyService_PubSub" />
                </data_writer>
                <publisher_qos base_name="MyServiceQosLib::MyService_PubSub" />
            </publisher>
            <participant_qos base_name="MyServiceQosLib::MyService_PubSub"/>
        </domain_participant>
    </domain_participant_library>
</dds>
