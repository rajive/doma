RTI Connext DDS User QoS Profiles

Configure the default DomainParticipantFactory qos policy.

Author: Rajive Joshi, Real-Time Innovations Inc. Copyright (C) 2017.
-->
<dds
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/5.3.0/rti_dds_qos_profiles.xsd"
	version="5.3.0">

	<qos_library name="FactoryQoSLib">

		<qos_profile name="BuiltinFactoryProfile" />

		<qos_profile name="LogfileFactoryProfile">
			<participant_factory_qos>
				<logging>
					<verbosity>WARNING</verbosity>
					<category>API</category>
					<print_format>VERBOSE_TIMESTAMPED</print_format>
					<output_file>ddslog.txt</output_file>
				</logging>
			</participant_factory_qos>
		</qos_profile>

		<!-- DEFAULT DomainParticipantFactory QoS Profile -->
		<qos_profile
			name="SelectedFactoryProfile"
			base_name="BuiltinFactoryProfile"
			is_default_participant_factory_profile="true">
		</qos_profile>

	</qos_library>
</dds>