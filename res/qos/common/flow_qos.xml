<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="/opt/rti/NDDSHOME/resource/schema/rti_dds_qos_profiles.xsd">

    <qos_library name="FlowQosLib">

        <!-- Logging -->
        <qos_profile name="Logging"
            base_name="EndpointQosLib::User.Generic.StrictReliable" />


        <!-- Configuration -->
        <qos_profile name="Configuration"
            base_name="EndpointQosLib::User.Pattern.LastValueCache" />


        <!-- State -->
        <qos_profile name="State"
            base_name="EndpointQosLib::User.Pattern.Status" />


        <!-- Data Streams -->
        <qos_profile name="Stream.BestEfforts"
            base_name="EndpointQosLib::User.Pattern.Streaming">
            <datawriter_qos>
                <history>
                    <depth>4</depth>
                </history>
            </datawriter_qos>
            <datareader_qos>
                <history>
                    <depth>16</depth>
                </history>
            </datareader_qos>
        </qos_profile>

        <qos_profile name="Stream.Reliable"
            base_name="EndpointQosLib::User.Pattern.ReliableStreaming">
            <datawriter_qos>
                <history>
                    <depth>4</depth>
                </history>
            </datawriter_qos>
            <datareader_qos>
                <history>
                    <depth>16</depth>
                </history>
            </datareader_qos>
        </qos_profile>


        <!-- Command-Response -->
        <qos_profile name="Command"
            base_name="EndpointQosLib::User.Pattern.Event" >
            <datawriter_qos>
                <liveliness>
                    <lease_duration>
                        <sec>4</sec>
                        <nanosec>0</nanosec>
                    </lease_duration>
                </liveliness>
            </datawriter_qos>
            <datareader_qos>
                <liveliness>
                    <lease_duration>
                        <sec>10</sec>
                        <nanosec>0</nanosec>
                    </lease_duration>
                </liveliness>
            </datareader_qos>
        </qos_profile>            

        <qos_profile name="Response" base_name="Command" />

    </qos_library>
</dds>
